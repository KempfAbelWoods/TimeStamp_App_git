<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TimeStamp_App.Ansichten.TimeStamp">
    <ContentPage.Content>
        <StackLayout
            Margin="20"
            Spacing="20">
            
            <Label FontSize="22" 
                   Text="Die zu bearbeitende Task auswählen"></Label>
            <Picker x:Name="Picker" 
                    WidthRequest="200" 
                    HorizontalOptions="Center"></Picker>
            <Button Text="Arbeitsauftrag beginnen"
                    Clicked="TimeStart" />
            <Button Grid.Column="1"
                    Text="Arbeitsauftrag beenden"
                    Clicked="TimeStop" />
            <Button Text="Back"
                    Clicked="GoBackToOverview_Clicked"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="CenterAndExpand" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>